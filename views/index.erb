<div class="container mt-5">
	<div class="row">
		<h2>Lastest posts:</h2>
	</div>
</div>
<div class="col m-2">
	<%= @posts_as_array %>
</div>

<div class="col m-2">
	<%= @posts_as_hash %>
</div>

<div class="col m-2">
	<%= @arr2 %>
</div>


<div class="container mt-5">
	<div class="col p-0">
		<% @posts_as_array.each do |post| %>
			<% post.each do |message| %>
				<p><small><%= message %></small></p>
			<% end %>
			<a href="/details/<%= $. %>"><small class="text-decoration-none">Comments</small></a>
			<hr>
		<% end %>
	</div>
</div>